# ═══════════════════════════════════════════════════════════════════════════════
# RAFIQ PLATFORM — Environment Variables Template
# ═══════════════════════════════════════════════════════════════════════════════
#
# ⚠️  INSTRUCTIONS:
#   1. Copy this file to .env       → cp .env.example .env
#   2. Replace every CHANGE_ME placeholder with real values
#   3. NEVER commit .env or .env.production to Git
#
# 🔑 Generate secrets:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# ═══════════════════════════════════════════════════════════════════════════════

# 🏠 Application
APP_NAME=Rafiq
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
TRUST_PROXY=false

# 🗄️ PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rafiq_db
DB_USERNAME=rafiq_user
DB_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD
DB_SSL=false
DB_SYNCHRONIZE=true
DB_LOGGING=true

# 🔴 Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD
REDIS_DB=0
REDIS_CACHE_TTL=3600
REDIS_TLS=false

# 🔑 JWT Authentication
JWT_SECRET=CHANGE_ME_GENERATE_WITH_CRYPTO_RANDOM_BYTES_64
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_DIFFERENT_FROM_JWT_SECRET
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# 🔐 Encryption
STORE_ENCRYPTION_KEY=CHANGE_ME_64_HEX_CHARS_FOR_AES256
APP_SECRET=CHANGE_ME_RANDOM_APP_SECRET

# 🛒 Salla
SALLA_CLIENT_ID=CHANGE_ME_SALLA_CLIENT_ID
SALLA_CLIENT_SECRET=CHANGE_ME_SALLA_CLIENT_SECRET
SALLA_REDIRECT_URI=http://localhost:3000/api/stores/salla/callback
SALLA_OAUTH_CALLBACK_URL=http://localhost:3000/api/stores/salla/callback
SALLA_WEBHOOK_SECRET=CHANGE_ME_SALLA_WEBHOOK_SECRET
SALLA_API_URL=https://api.salla.dev/admin/v2

# 🏪 Zid
ZID_CLIENT_ID=CHANGE_ME_ZID_CLIENT_ID
ZID_CLIENT_SECRET=CHANGE_ME_ZID_CLIENT_SECRET
ZID_REDIRECT_URI=http://localhost:3000/api/stores/zid/callback
ZID_OAUTH_CALLBACK_URL=http://localhost:3000/api/stores/zid/callback
ZID_WEBHOOK_SECRET=CHANGE_ME_ZID_WEBHOOK_SECRET
ZID_API_URL=https://api.zid.sa/v1

# 💬 WhatsApp
META_APP_ID=
META_APP_SECRET=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=
WHATSAPP_API_VERSION=v18.0

# 🎮 Discord
DISCORD_BOT_TOKEN=
DISCORD_APPLICATION_ID=
DISCORD_PUBLIC_KEY=

# 🤖 OpenAI
OPENAI_API_KEY=CHANGE_ME_OPENAI_API_KEY
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# 💳 Stripe
STRIPE_SECRET_KEY=CHANGE_ME_sk_test_xxx
STRIPE_PUBLISHABLE_KEY=CHANGE_ME_pk_test_xxx
STRIPE_WEBHOOK_SECRET=CHANGE_ME_whsec_xxx

# 💳 Moyasar
MOYASAR_SECRET_KEY=CHANGE_ME_sk_test_xxx
MOYASAR_PUBLISHABLE_KEY=CHANGE_ME_pk_test_xxx
MOYASAR_WEBHOOK_SECRET=

# 📧 SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=CHANGE_ME_email@gmail.com
SMTP_PASSWORD=CHANGE_ME_app_password
SMTP_FROM_EMAIL=noreply@rafeq.ai
SMTP_FROM_NAME=Rafiq

# 📊 Monitoring
SENTRY_DSN=
LOG_LEVEL=debug

# 🔒 Security
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# 📁 Storage
STORAGE_TYPE=local
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=rafiq-storage
S3_REGION=me-south-1
S3_ENDPOINT=

# 🧪 Dev
SWAGGER_ENABLED=true
DEBUG=true
